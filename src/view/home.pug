<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/styles.css")
        title Guess Mine
    body
        .loginBox
            form#jsLogin
                input(placeholder="What's your nickname",type="text")
        .gameContainer#jsGame
            .main
                canvas.canvas#jsCanvas
                .controls#jsControls
                    button#jsMode Fill
                    .colors
                        .color.jsColor(style="background-color:rgb(0, 0, 0)")
                        .color.jsColor(style="background-color:rgb(255,255,255)")
                        .color.jsColor(style="background-color:rgb(255,59,48)")
                        .color.jsColor(style="background-color:rgb(255,149,0)")
                        .color.jsColor(style="background-color:rgb(255,204,0)")
                        .color.jsColor(style="background-color:rgb(76,217,100)")
                        .color.jsColor(style="background-color:rgb(90,200,250)")
                        .color.jsColor(style="background-color:rgb(0,122,255)")
                        .color.jsColor(style="background-color:rgb(88,86,214)")
            .chat#jsChat
                .player__board#jsPBoard
                ul.chat__messages#jsMessage
                form.chat__form#jsSendMsg
                    input(placeholder="Write a message", type="text")
        script.
            // script안에 코드를 의미함
            // pug javascript literal 검색
            // !를 하게 되면 pug 변수가 된다.
            window.events = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")